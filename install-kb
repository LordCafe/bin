#!/bin/bash

# install-kb - Instalador simple para KB Terminal

# Colores
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${BLUE}KB Terminal - Instalador${NC}"
echo "=================================="
echo

# 1. Verificar si el alias ya existe
if grep -q "alias kb=" ~/.bashrc 2>/dev/null; then
    echo -e "${GREEN}âœ“${NC} Alias 'kb' ya estÃ¡ configurado en ~/.bashrc"
else
    echo -e "${YELLOW}â†’${NC} Agregando alias 'kb' a ~/.bashrc..."
    echo "" >> ~/.bashrc
    echo "# KB Terminal - Your Second Brain in the Terminal" >> ~/.bashrc
    echo "alias kb='$HOME/bin/CheatCmd'" >> ~/.bashrc
    echo -e "${GREEN}âœ“${NC} Alias 'kb' agregado a ~/.bashrc"
fi

# 2. Verificar/configurar directorio de cheat-sheets en .env
if [[ -f "$HOME/bin/.env" ]]; then
    if grep -q "CHEAT_SHEETS_DIR" "$HOME/bin/.env"; then
        echo -e "${GREEN}âœ“${NC} ConfiguraciÃ³n KB Terminal ya existe en .env"
        CURRENT_DIR=$(grep "CHEAT_SHEETS_DIR" "$HOME/bin/.env" | cut -d'=' -f2 | tr -d '"')
        echo -e "${BLUE}  Directorio configurado: ${CURRENT_DIR}${NC}"
    else
        echo -e "${YELLOW}â†’${NC} Agregando configuraciÃ³n KB Terminal a .env existente..."
        echo "" >> "$HOME/bin/.env"
        echo "# KB Terminal Configuration" >> "$HOME/bin/.env"
        echo 'CHEAT_SHEETS_DIR="$HOME/Documents/cheat-sheets"' >> "$HOME/bin/.env"
        echo -e "${GREEN}âœ“${NC} ConfiguraciÃ³n KB Terminal agregada a .env"
    fi
else
    echo -e "${YELLOW}â†’${NC} Creando archivo .env con configuraciÃ³n KB Terminal..."
    cat > "$HOME/bin/.env" << 'EOF'
# KB Terminal Configuration
CHEAT_SHEETS_DIR="$HOME/Documents/cheat-sheets"
EOF
    echo -e "${GREEN}âœ“${NC} Archivo .env creado con configuraciÃ³n KB Terminal"
fi

# 3. Verificar/crear directorio de cheat-sheets
CHEAT_DIR="$HOME/Documents/cheat-sheets"
if [[ -d "$CHEAT_DIR" ]]; then
    echo -e "${GREEN}âœ“${NC} Directorio de cheat-sheets ya existe: $CHEAT_DIR"
else
    echo -e "${YELLOW}â†’${NC} Creando directorio de cheat-sheets..."
    mkdir -p "$CHEAT_DIR"
    echo -e "${GREEN}âœ“${NC} Directorio creado: $CHEAT_DIR"
fi

# 4. Verificar permisos de ejecuciÃ³n
echo -e "${YELLOW}â†’${NC} Verificando permisos de ejecuciÃ³n..."
chmod +x "$HOME/bin/CheatCmd"
chmod +x "$HOME/bin/Cheat-sheet"/*
echo -e "${GREEN}âœ“${NC} Permisos de ejecuciÃ³n configurados"

echo
echo -e "${GREEN}ðŸŽ‰ Â¡InstalaciÃ³n completada!${NC}"
echo
echo -e "${BLUE}Para empezar a usar KB Terminal:${NC}"
echo "  1. Reinicia tu terminal o ejecuta: source ~/.bashrc"
echo "  2. Crea tu primera nota: kb add test"
echo "  3. Ve la ayuda completa: kb --help"
echo
echo -e "${BLUE}Comandos disponibles:${NC}"
echo "  kb add <archivo>     # Crear nueva entrada"
echo "  kb show <id|archivo> # Mostrar entradas"
echo "  kb alias <alias>     # Buscar por alias"
echo "  kb search <tÃ©rmino>  # Buscar texto"
echo "  kb edit <id>         # Editar entrada"
echo "  kb delete <id>       # Borrar entrada"
echo
echo -e "${YELLOW}Â¡Tu Second Brain en la Terminal estÃ¡ listo!${NC} ðŸ§ âœ¨"