#!/bin/bash

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

show_usage() {
    echo -e "${BLUE}Docker Command Manager${NC}"
    echo -e "Usage: $(basename "$0") <command> [args...]"
    echo
    echo -e "${YELLOW}Available commands:${NC} \n"
    if [[ -d "$HOME/bin/Docker" ]]; then
        
        find "$HOME/bin/Docker" -maxdepth 1 -type f -executable -printf "  %f\n"
    fi
    echo
    echo -e "${BLUE}Examples:${NC}"
    echo "  DockerCmd WhatNets web7"
    echo "  DockerCmd WhoConnected servers_idigitalapp"
    echo "  DockerCmd WhatPorts varnish4"
}

if [[ $# -eq 0 ]]; then
    show_usage
    exit 1
fi

cmd="$1"
shift

if [[ -x "$HOME/bin/Docker/$cmd" ]]; then
    exec "$HOME/bin/Docker/$cmd" "$@"
else
    echo -e "${RED}Error:${NC} Docker command '$cmd' not found"
    echo
    show_usage
    exit 1
fi